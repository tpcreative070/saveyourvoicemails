<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.tpcreative.saveyourvoicemails">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <uses-permission android:name="android.permission.PROCESS_INCOMING_CALLS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Saveyourvoicemails">
        <activity android:name="co.tpcreative.presentation.ui.player.PlayerAct">
        </activity>
        <activity
            android:name="co.tpcreative.presentation.ui.user.view.SignUpAct"
            android:label="@string/title_activity_sign_up" />
        <activity android:name="co.tpcreative.presentation.ui.user.view.SignInAct" />
        <activity android:name="co.tpcreative.presentation.ui.home.HomeAct">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:name="co.tpcreative.presentation.common.services.SaveYourVoiceMailsService"
            android:foregroundServiceType="mediaProjection">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
       </service>
    </application>

</manifest>